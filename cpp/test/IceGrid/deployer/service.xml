<icegrid>

  <service name="${name}" entry="TestService:create">

    <adapters>
      <adapter name="${name}" endpoints="default">
        <object identity="${server}-${name}" type="::Test"/>
      </adapter>
    </adapters>

    <properties>
      <property name="${name}.InheritedVariable" value="${inheritedvar}"/>
      <property name="${name}.Identity" value="${server}-${name}"/>
      <property name="${name}.Type" value="standard"/>
      <property name="${name}.ServiceName" value="${name}"/>
    </properties>

    <target name="debug">
      <properties>
        <property name="${name}.DebugProperty" value="debug"/>
      </properties>
    </target>

  </service>

</icegrid>