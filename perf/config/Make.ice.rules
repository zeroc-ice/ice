ifeq ($(ICE_HOME),)
    $(error ICE_HOME must be defined to build Ice performance testing tools.)
endif

slicedir		= $(ICE_HOME)/slice
configdir		= $(ICE_HOME)/config

include	 $(configdir)/Make.rules.$(UNAME)

CPPFLAGS		= -I$(top_srcdir)/include
ICECPPFLAGS		= -I$(slicedir)
SLICE2CPPFLAGS		= $(ICECPPFLAGS)

#
# Optimization rules come from the Ice distribution's config files.
#
ifeq ($(DEBUG),yes)
     CXXFLAGS		:= -g $(CXXFLAGS)
endif

LDFLAGS			= $(LDPLATFORMFLAGS) $(CXXFLAGS)

ICE_CPPFLAGS		?= -I$(ICE_HOME)/include
ICE_LIBS		?= -L$(ICE_HOME)/lib -lIce -lIceUtil

SLICE2CPP		= $(ICE_HOME)/bin/slice2cpp

.SUFFIXES:
.SUFFIXES:		.cc .cpp .o .py

%.h %.cpp: %.ice
	rm -f $(*F).h $(*F).cpp
	$(SLICE2CPP) $(SLICE2CPPFLAGS) $(*F).ice	

.cpp.o:
	$(CXX) -c $(CPPFLAGS) $(CXXFLAGS) $<

.cc.o:
	$(CXX) -c $(CPPFLAGS) $(CXXFLAGS) $<

#
# XXX- Fix SLICE_SRCS depend rule.
#
depend:: $(SRCS) $(SLICE_SRCS)
	-rm -f .depend
	if test -n "$(SRCS)" ; then \
	    $(CXX) -DMAKEDEPEND -MM $(CXXFLAGS) $(CPPFLAGS) $(SRCS) | \
	    $(configdir)/makedepend.py >> .depend; \
	fi
