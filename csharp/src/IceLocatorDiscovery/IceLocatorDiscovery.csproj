<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="../../msbuild/ice.common.props" />
  <Import Project="../ZeroC.Ice.Slice.Tools/ZeroC.Ice.Slice.Tools.props"/>
  <PropertyGroup>
    <AssemblyName>IceLocatorDiscovery</AssemblyName>
    <Description>The IceLocatorDiscovery plug-in</Description>
    <AssemblyTitle>$(Description)</AssemblyTitle>
    <TargetFramework>net8.0</TargetFramework>
    <!-- Packaging properties -->
    <PackageId>ZeroC.IceLocatorDiscovery</PackageId>
    <PackageTags>ice;icelocatordiscovery;rpc</PackageTags>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>
  <ItemGroup>
    <SliceCompile Include="../../../slice/$(AssemblyName)/*.ice" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.1.1" PrivateAssets="All" />
    <PackageReference Include="StyleCop.Analyzers" Version="$(StyleCopAnalyzersVersion)">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="../Ice/Ice.csproj" />
  </ItemGroup>
  <ItemGroup>
    <!-- Packaging files -->
    <Content Include="../../../LICENSE" Pack="true" PackagePath="/" />
    <Content Include="../../../ICE_LICENSE" Pack="true" PackagePath="/" />
    <Content Include="../../../assets/logo-128x128.png" Pack="true" PackagePath="/" />
    <Content Include="README.md" Pack="true" PackagePath="/" />
  </ItemGroup>
  <Import Project="../ZeroC.Ice.Slice.Tools/ZeroC.Ice.Slice.Tools.targets"/>
</Project>
