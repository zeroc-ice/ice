<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="../../msbuild/ice.common.props" />
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <!-- Packaging properties -->
    <PackageId>iceboxnet</PackageId>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>iceboxnet</ToolCommandName>
    <PackageTags>Ice</PackageTags>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageIcon>logo-128x128.png</PackageIcon>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="../Ice/Ice.csproj" />
    <ProjectReference Include="../IceBox/IceBox.csproj" />
  </ItemGroup>
  <ItemGroup>
      <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.1.1" PrivateAssets="All" />
      <PackageReference Include="StyleCop.Analyzers" Version="$(StyleCopAnalyzersVersion)">
        <PrivateAssets>all</PrivateAssets>
        <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      </PackageReference>
  </ItemGroup>
  <Import Project="../../msbuild/ice.sign.targets" />

  <ItemGroup>
    <!-- Packaging files -->
    <Content Include="../../../LICENSE" Pack="true" PackagePath="/" />
    <Content Include="../../../ICE_LICENSE" Pack="true" PackagePath="/" />
    <Content Include="../../../config/logo-128x128.png" Pack="true" PackagePath="/" />
    <Content Include="README.md" Pack="true" PackagePath="/" />
  </ItemGroup>
</Project>
