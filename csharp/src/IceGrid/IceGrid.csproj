<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="../ZeroC.Ice.Slice.Tools/ZeroC.Ice.Slice.Tools.props"/>
  <PropertyGroup>
    <AssemblyName>IceGrid</AssemblyName>
    <Description>Client library for the IceGrid service</Description>
    <AssemblyTitle>$(Description)</AssemblyTitle>
    <TargetFrameworks>net8.0</TargetFrameworks>
    <!-- Packaging properties -->
    <PackageId>ZeroC.IceGrid</PackageId>
    <PackageIcon>icegrid-128x128.png</PackageIcon>
    <PackageTags>ice;icegrid;rpc</PackageTags>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <!-- Include PDB in the built .nupkg -->
    <AllowedOutputExtensionsInPackageBuildOutputFolder>$(AllowedOutputExtensionsInPackageBuildOutputFolder);.pdb</AllowedOutputExtensionsInPackageBuildOutputFolder>
  </PropertyGroup>
  <ItemGroup>
    <SliceCompile Include="../../../slice/$(AssemblyName)/*.ice" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.1.1" PrivateAssets="All" />
    <PackageReference Include="StyleCop.Analyzers" Version="$(StyleCopAnalyzersVersion)">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="../Ice/Ice.csproj" />
    <ProjectReference Include="../Glacier2/Glacier2.csproj" />
  </ItemGroup>
  <ItemGroup>
    <!-- Packaging files -->
    <Content Include="../../../LICENSE" Pack="true" PackagePath="/" />
    <Content Include="../../../ICE_LICENSE" Pack="true" PackagePath="/" />
    <Content Include="../../../assets/icegrid-128x128.png" Pack="true" PackagePath="/" />
    <Content Include="README.md" Pack="true" PackagePath="/" />
    <Content Include="@(SliceCompile)" Pack="true" PackagePath="/slice/IceGrid"/>
    <Content Include="ZeroC.IceGrid.props" Pack="true" PackagePath="buildTransitive/" />
  </ItemGroup>
  <Import Project="../ZeroC.Ice.Slice.Tools/ZeroC.Ice.Slice.Tools.targets"/>
</Project>
