<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="../../msbuild/ice.common.props" />
  <PropertyGroup>
    <AssemblyName>Ice</AssemblyName>
    <TargetFramework>net8.0</TargetFramework>
    <!-- Packaging properties -->
    <PackageId>ZeroC.Ice</PackageId>
    <PackageTags>Ice</PackageTags>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>
  <ItemGroup>
    <SliceCompile Include="../../../slice/Ice/*.ice" />
  </ItemGroup>
  <ItemGroup>
      <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.1.1" PrivateAssets="All" />
      <PackageReference Include="StyleCop.Analyzers" Version="$(StyleCopAnalyzersVersion)">
        <PrivateAssets>all</PrivateAssets>
        <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <!-- Packaging files -->
    <Content Include="../../../LICENSE" Pack="true" PackagePath="/" />
    <Content Include="../../../ICE_LICENSE" Pack="true" PackagePath="/" />
    <Content Include="README.md" Pack="true" PackagePath="/" />
    <Content Include="@(SliceCompile)" Pack="true" PackagePath="/slice/Ice"/>
    <Content Include="ZeroC.Ice.props" Pack="true" PackagePath="buildTransitive/" />
  </ItemGroup>
  <Import Project="../../msbuild/ice.sign.targets" />
</Project>
