<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
    <Import Project="ice.common.props" />
    <PropertyGroup>
        <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
        <NoWarn>2008;8021;NU5128</NoWarn>
        <IncludeBuildOutput>false</IncludeBuildOutput>
        <TargetFramework>netstandard2.0</TargetFramework>
        <OutputPath>bin</OutputPath>
        <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
        <PackageId>zeroc.ice.net</PackageId>
        <Title>ZeroC Ice for .NET</Title>
        <PackageVersion>3.7.11</PackageVersion>
        <Authors>ZeroC</Authors>
        <PackageLicenseExpression>GPL-2.0-only</PackageLicenseExpression>
        <PackageProjectUrl>https://github.com/zeroc-ice/ice</PackageProjectUrl>
        <PackageIcon>logo.png</PackageIcon>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <Copyright>Copyright (c) ZeroC, Inc.</Copyright>
        <Description>The Ice framework provides everything you need to build networked applications, including RPC, pub/sub, server deployment, and more.</Description>
        <PackageReleaseNotes>https://archive.zeroc.com/rel/ice-releases/ice-3-7/ice-3-7-11-release-notes</PackageReleaseNotes>
        <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
        <PackageTags>ice</PackageTags>
    </PropertyGroup>

    <ItemGroup>
        <!-- Build props -->
        <Content Include="zeroc.ice.net.props">
            <Pack>true</Pack>
            <PackagePath>build</PackagePath>
        </Content>

        <!-- License files -->
        <None Include="..\..\ICE_LICENSE" Link="ICE_LICENSE.txt">
            <Pack>true</Pack>
            <PackagePath>\</PackagePath>
        </None>
        <None Include="..\..\LICENSE" Link="LICENSE.txt">
            <Pack>true</Pack>
            <PackagePath>\</PackagePath>
        </None>
        <None Include="THIRD_PARTY_LICENSE.txt">
            <Pack>true</Pack>
            <PackagePath>\</PackagePath>
        </None>

        <!-- Logo and README -->
        <None Include="..\..\logo.png">
            <Pack>True</Pack>
            <PackagePath></PackagePath>
        </None>
        <None Include="..\README.md">
            <Pack>True</Pack>
            <PackagePath></PackagePath>
        </None>

        <!-- .NET Libraries -->
        <Content Include="..\lib\netstandard2.0\*.dll">
            <Pack>true</Pack>
            <PackagePath>lib\netstandard2.0</PackagePath>
        </Content>

        <!-- Slice files -->
        <Content Include="..\..\slice\**\*.ice"
                 Exclude="..\..\slice\IceDiscovery\*.ice;..\..\slice\IceLocatorDiscovery\*.ice">
            <Pack>true</Pack>
            <PackagePath>slice</PackagePath>
        </Content>

        <!-- Tools directory (slice2cs compilers, iceboxnet, bzip2.dll) -->
        <Content Include="obj\package\tools\**">
            <Pack>true</Pack>
            <PackagePath>tools</PackagePath>
        </Content>
    </ItemGroup>
</Project>
