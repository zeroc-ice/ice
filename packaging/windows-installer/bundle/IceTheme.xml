<Theme xmlns="http://wixtoolset.org/schemas/v4/thmutil">
    <Window Width="500" Height="360" HexStyle="100a0000" FontId="0">#(loc.Caption)</Window>

    <Font Id="0" Height="-12" Weight="500" Foreground="000000" Background="FFFFFF">Segoe UI</Font>
    <Font Id="1" Height="-24" Weight="500" Foreground="000000">Segoe UI</Font>
    <Font Id="2" Height="-18" Weight="500" Foreground="333333">Segoe UI</Font>
    <Font Id="3" Height="-12" Weight="500" Foreground="000000" Background="FFFFFF">Segoe UI</Font>
    <Font Id="4" Height="-12" Weight="500" Foreground="0000FF" Background="FFFFFF" Underline="yes">Segoe UI</Font>

    <Image X="11" Y="11" Width="48" Height="48" ImageFile="product.ico" Visible="yes" />
    <Text X="70" Y="11" Width="-11" Height="48" FontId="1" Visible="yes" DisablePrefix="yes">#(loc.Title)</Text>

    <!-- Install Page: License agreement -->
    <Page Name="Install">
        <Richedit Name="EulaRichedit" X="11" Y="70" Width="-11" Height="-80" TabStop="yes" FontId="0" />
        <Checkbox Name="EulaAcceptCheckbox" X="11" Y="-50" Width="300" Height="17" TabStop="yes" FontId="3" HideWhenDisabled="yes">#(loc.InstallAcceptCheckbox)</Checkbox>
        <Button Name="OptionsButton" X="-261" Y="-11" Width="80" Height="23" TabStop="yes" FontId="0" HideWhenDisabled="yes">#(loc.InstallOptionsButton)</Button>
        <Button Name="InstallButton" X="-171" Y="-11" Width="75" Height="23" TabStop="yes" FontId="0">#(loc.InstallInstallButton)</Button>
        <Button Name="WelcomeCancelButton" X="-11" Y="-11" Width="75" Height="23" TabStop="yes" FontId="0">#(loc.InstallCancelButton)</Button>
    </Page>

    <!-- Options Page: Install directory and PATH checkbox -->
    <Page Name="Options">
        <Text X="11" Y="70" Width="-11" Height="30" FontId="2" DisablePrefix="yes">#(loc.OptionsHeader)</Text>
        <Text X="11" Y="110" Width="-11" Height="17" FontId="3" DisablePrefix="yes">#(loc.OptionsLocationLabel)</Text>
        <Editbox Name="FolderEditbox" X="11" Y="132" Width="-96" Height="21" TabStop="yes" FontId="3" FileSystemAutoComplete="yes" />
        <Button Name="BrowseButton" X="-81" Y="130" Width="70" Height="23" TabStop="yes" FontId="0">#(loc.OptionsBrowseButton)</Button>
        <Checkbox Name="AddToPath" X="11" Y="170" Width="400" Height="17" TabStop="yes" FontId="3">#(loc.OptionsAddToPathCheckbox)</Checkbox>
        <Button Name="OptionsOkButton" X="-171" Y="-11" Width="75" Height="23" TabStop="yes" FontId="0">#(loc.OptionsOkButton)</Button>
        <Button Name="OptionsCancelButton" X="-11" Y="-11" Width="75" Height="23" TabStop="yes" FontId="0">#(loc.OptionsCancelButton)</Button>
    </Page>

    <!-- Progress Page -->
    <Page Name="Progress">
        <Text X="11" Y="70" Width="-11" Height="30" FontId="2" DisablePrefix="yes">#(loc.ProgressHeader)</Text>
        <Text X="11" Y="110" Width="70" Height="17" FontId="3" DisablePrefix="yes">#(loc.ProgressLabel)</Text>
        <Text Name="OverallProgressPackageText" X="85" Y="110" Width="-11" Height="17" FontId="3" DisablePrefix="yes">#(loc.OverallProgressPackageText)</Text>
        <Progressbar Name="OverallCalculatedProgressbar" X="11" Y="135" Width="-11" Height="15" />
        <Button Name="ProgressCancelButton" X="-11" Y="-11" Width="75" Height="23" TabStop="yes" FontId="0">#(loc.ProgressCancelButton)</Button>
    </Page>

    <!-- Modify Page: Repair/Uninstall -->
    <Page Name="Modify">
        <Text X="11" Y="70" Width="-11" Height="30" FontId="2" DisablePrefix="yes">#(loc.ModifyHeader)</Text>
        <Button Name="RepairButton" X="-261" Y="-11" Width="75" Height="23" TabStop="yes" FontId="0" HideWhenDisabled="yes">#(loc.ModifyRepairButton)</Button>
        <Button Name="UninstallButton" X="-171" Y="-11" Width="75" Height="23" TabStop="yes" FontId="0">#(loc.ModifyUninstallButton)</Button>
        <Button Name="ModifyCancelButton" X="-11" Y="-11" Width="75" Height="23" TabStop="yes" FontId="0">#(loc.ModifyCancelButton)</Button>
    </Page>

    <!-- Success Page -->
    <Page Name="Success">
        <Text Name="SuccessHeader" X="11" Y="70" Width="-11" Height="30" FontId="2" HideWhenDisabled="yes" DisablePrefix="yes">#(loc.SuccessHeader)</Text>
        <Text Name="SuccessInstallHeader" X="11" Y="70" Width="-11" Height="30" FontId="2" HideWhenDisabled="yes" DisablePrefix="yes">#(loc.SuccessInstallHeader)</Text>
        <Text Name="SuccessRepairHeader" X="11" Y="70" Width="-11" Height="30" FontId="2" HideWhenDisabled="yes" DisablePrefix="yes">#(loc.SuccessRepairHeader)</Text>
        <Text Name="SuccessUninstallHeader" X="11" Y="70" Width="-11" Height="30" FontId="2" HideWhenDisabled="yes" DisablePrefix="yes">#(loc.SuccessUninstallHeader)</Text>
        <Button Name="LaunchButton" X="-171" Y="-11" Width="150" Height="23" TabStop="yes" FontId="0" HideWhenDisabled="yes">#(loc.SuccessLaunchButton)</Button>
        <Button Name="SuccessCancelButton" X="-11" Y="-11" Width="75" Height="23" TabStop="yes" FontId="0">#(loc.SuccessCloseButton)</Button>
    </Page>

    <!-- Failure Page -->
    <Page Name="Failure">
        <Text Name="FailureHeader" X="11" Y="70" Width="-11" Height="30" FontId="2" HideWhenDisabled="yes" DisablePrefix="yes">#(loc.FailureHeader)</Text>
        <Text Name="FailureInstallHeader" X="11" Y="70" Width="-11" Height="30" FontId="2" HideWhenDisabled="yes" DisablePrefix="yes">#(loc.FailureInstallHeader)</Text>
        <Text Name="FailureRepairHeader" X="11" Y="70" Width="-11" Height="30" FontId="2" HideWhenDisabled="yes" DisablePrefix="yes">#(loc.FailureRepairHeader)</Text>
        <Text Name="FailureUninstallHeader" X="11" Y="70" Width="-11" Height="30" FontId="2" HideWhenDisabled="yes" DisablePrefix="yes">#(loc.FailureUninstallHeader)</Text>
        <Hypertext Name="FailureLogFileLink" X="11" Y="110" Width="-11" Height="42" FontId="3" TabStop="yes" HideWhenDisabled="yes">#(loc.FailureLogText)</Hypertext>
        <Hypertext Name="FailureMessageText" X="22" Y="155" Width="-11" Height="51" FontId="3" TabStop="yes" HideWhenDisabled="yes" />
        <Button Name="FailureCloseButton" X="-11" Y="-11" Width="75" Height="23" TabStop="yes" FontId="0">#(loc.FailureCloseButton)</Button>
    </Page>
</Theme>
